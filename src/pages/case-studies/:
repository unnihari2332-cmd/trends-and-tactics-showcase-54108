import { useRouter } from "next/router";
import Header from "@/components/Header";
import Footer from "@/components/Footer";
import { slidesData } from "@/data/caseStudies";
import { CaseCard } from "@/components/CaseCard"; // reuse your CaseCard

const CaseStudyDetail = () => {
  const router = useRouter();
  const { id } = router.query;

  if (!id) return null;
  const caseStudy = slidesData[Number(id)];
  if (!caseStudy) return <p className="p-10">Case study not found.</p>;

  return (
    <div className="min-h-screen">
      <Header />
      <section className="pt-20 pb-16 bg-muted/30">
        <div className="container mx-auto max-w-5xl px-6">
          <CaseCard {...caseStudy} />
        </div>
      </section>
      <Footer />
    </div>
  );
};

export default CaseStudyDetail;
